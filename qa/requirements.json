{
  "version": "1.0.0",
  "updated": "2025-11-20",
  "description": "Machine-verifiable QA requirements aligned with ARCHITECTURE.md (True North)",
  "qa_philosophy": {
    "true_north": "Architecture document is the single source of truth",
    "validation_approach": "QA validates implementation against architecture",
    "red_green_cycle": "RED = architecture mismatch, GREEN = full alignment",
    "no_legacy": "All components must be wired or deleted",
    "strict_wiring": "Static presence + runtime behavior both required"
  },
  "requirements": {
    "architecture_compliance": {
      "category": "Architecture Validation",
      "severity": "critical",
      "checks": [
        {
          "id": "ARCH-001",
          "name": "Architecture Document Exists",
          "description": "ARCHITECTURE.md must exist and be up to date",
          "type": "file_existence",
          "target": "ARCHITECTURE.md",
          "required": true
        },
        {
          "id": "ARCH-002",
          "name": "All Routes Defined",
          "description": "All routes in ARCHITECTURE.md must exist in src/App.tsx",
          "type": "route_validation",
          "source": "ARCHITECTURE.md",
          "target": "src/App.tsx",
          "expected_routes": 29,
          "required": true
        },
        {
          "id": "ARCH-003",
          "name": "All Pages Exist",
          "description": "All page components in ARCHITECTURE.md must exist",
          "type": "component_existence",
          "source": "ARCHITECTURE.md",
          "target_dir": "src/pages",
          "expected_count": 29,
          "required": true
        },
        {
          "id": "ARCH-004",
          "name": "All Component Categories Exist",
          "description": "All 17 component categories must exist",
          "type": "directory_existence",
          "target_dir": "src/components",
          "expected_categories": [
            "admin", "ai", "assessment", "auth", "checkout",
            "diagnostics", "layout", "milestones", "organization",
            "qa", "security", "team", "test", "ui", "watchdog", "webhook"
          ],
          "required": true
        },
        {
          "id": "ARCH-005",
          "name": "All Hooks Exist",
          "description": "All custom hooks in ARCHITECTURE.md must exist",
          "type": "hook_existence",
          "target_dir": "src/hooks",
          "expected_count": 44,
          "required": true
        }
      ]
    },
    "wiring_verification": {
      "category": "Component Wiring",
      "severity": "critical",
      "checks": [
        {
          "id": "WIRE-001",
          "name": "Static Wiring - Routes",
          "description": "All pages must be imported and used in routing",
          "type": "static_wiring",
          "target": "src/App.tsx",
          "validation": "check_imports_and_routes",
          "required": true
        },
        {
          "id": "WIRE-002",
          "name": "Static Wiring - Components",
          "description": "All components must be imported somewhere",
          "type": "static_wiring",
          "target_dir": "src/components",
          "validation": "check_component_imports",
          "allow_unused_in_categories": ["test", "diagnostics"],
          "required": true
        },
        {
          "id": "WIRE-003",
          "name": "Static Wiring - Hooks",
          "description": "All hooks must be imported and used",
          "type": "static_wiring",
          "target_dir": "src/hooks",
          "validation": "check_hook_usage",
          "required": true
        },
        {
          "id": "WIRE-004",
          "name": "Runtime Wiring - Navigation",
          "description": "All routes must be accessible via navigation",
          "type": "runtime_wiring",
          "validation": "check_route_accessibility",
          "test_routes": [
            "/", "/dashboard", "/modules", "/assessment",
            "/team", "/qa-dashboard", "/admin/config"
          ],
          "required": true
        },
        {
          "id": "WIRE-005",
          "name": "Runtime Wiring - UI Elements",
          "description": "Critical UI elements must render and respond",
          "type": "runtime_wiring",
          "validation": "check_ui_interactivity",
          "critical_elements": [
            "sidebar_navigation",
            "header_controls",
            "maturion_chat_toggle",
            "auth_guard"
          ],
          "required": true
        }
      ]
    },
    "legacy_detection": {
      "category": "Legacy Component Detection",
      "severity": "high",
      "checks": [
        {
          "id": "LEG-001",
          "name": "Orphaned Components",
          "description": "Detect components not imported anywhere",
          "type": "orphan_detection",
          "target_dir": "src/components",
          "exclusions": ["ui", "test"],
          "action": "warn_then_delete",
          "grace_period_cycles": 2,
          "required": true
        },
        {
          "id": "LEG-002",
          "name": "Unused Pages",
          "description": "Detect page components not in routes",
          "type": "orphan_detection",
          "target_dir": "src/pages",
          "validation": "check_route_usage",
          "action": "warn_then_delete",
          "grace_period_cycles": 2,
          "required": true
        },
        {
          "id": "LEG-003",
          "name": "Unused Hooks",
          "description": "Detect hooks not imported anywhere",
          "type": "orphan_detection",
          "target_dir": "src/hooks",
          "validation": "check_import_usage",
          "action": "warn_then_delete",
          "grace_period_cycles": 2,
          "required": true
        },
        {
          "id": "LEG-004",
          "name": "Not in Architecture",
          "description": "Detect components not documented in ARCHITECTURE.md",
          "type": "architecture_sync",
          "validation": "check_architecture_listing",
          "action": "warn_or_document",
          "required": true
        }
      ]
    },
    "build_integrity": {
      "category": "Build & Compilation",
      "severity": "critical",
      "checks": [
        {
          "id": "BUILD-001",
          "name": "TypeScript Compilation",
          "description": "TypeScript must compile without errors",
          "type": "compile",
          "command": "tsc --noEmit",
          "required": true,
          "allow_warnings": false
        },
        {
          "id": "BUILD-002",
          "name": "Vite Build Success",
          "description": "Production build must succeed",
          "type": "build",
          "command": "npm run build",
          "required": true,
          "allow_warnings": true
        },
        {
          "id": "BUILD-003",
          "name": "ESLint Validation",
          "description": "Code must pass linting",
          "type": "lint",
          "command": "npm run lint",
          "required": true,
          "allow_warnings": true,
          "max_warnings": 10
        },
        {
          "id": "BUILD-004",
          "name": "Bundle Size Check",
          "description": "Production bundle must be within limits",
          "type": "bundle_size",
          "max_size_mb": 3.0,
          "max_gzip_kb": 700,
          "required": true,
          "severity": "warning"
        }
      ]
    },
    "environment_checks": {
      "category": "Environment Configuration",
      "severity": "high",
      "checks": [
        {
          "id": "ENV-001",
          "name": "Required Environment Variables",
          "description": "Critical env vars must be present",
          "type": "env_validation",
          "required_vars": [
            "VITE_SUPABASE_PROJECT_ID",
            "VITE_SUPABASE_URL",
            "VITE_SUPABASE_PUBLISHABLE_KEY"
          ],
          "required": true,
          "strict_mode_required": true
        },
        {
          "id": "ENV-002",
          "name": "Optional Environment Variables",
          "description": "Optional env vars for full functionality",
          "type": "env_validation",
          "optional_vars": [
            "OPENAI_API_KEY",
            "EMAIL_FROM"
          ],
          "required": false,
          "strict_mode_required": true
        },
        {
          "id": "ENV-003",
          "name": "Environment File Exists",
          "description": ".env file must exist",
          "type": "file_existence",
          "target": ".env",
          "required": true
        }
      ]
    },
    "database_integrity": {
      "category": "Database Schema",
      "severity": "critical",
      "checks": [
        {
          "id": "DB-001",
          "name": "Migrations Applied",
          "description": "All migrations must be applied",
          "type": "migration_check",
          "validation": "check_migration_status",
          "required": true,
          "strict_mode_required": true
        },
        {
          "id": "DB-002",
          "name": "RLS Policies Active",
          "description": "Row Level Security must be enabled",
          "type": "rls_check",
          "critical_tables": [
            "organizations",
            "users",
            "milestones",
            "documents",
            "qa_logs"
          ],
          "required": true,
          "strict_mode_required": true
        },
        {
          "id": "DB-003",
          "name": "Core Tables Exist",
          "description": "Essential tables must exist",
          "type": "table_existence",
          "required_tables": [
            "organizations",
            "users",
            "organization_members",
            "domains",
            "milestones",
            "documents",
            "qa_logs",
            "watchdog_incidents"
          ],
          "required": true,
          "strict_mode_required": true
        },
        {
          "id": "DB-004",
          "name": "Database Functions",
          "description": "Critical database functions must exist",
          "type": "function_existence",
          "required_functions": [
            "get_user_primary_organization",
            "calculate_milestone_progress",
            "encrypt_credentials"
          ],
          "required": true,
          "strict_mode_required": true
        }
      ]
    },
    "api_health": {
      "category": "API & Edge Functions",
      "severity": "high",
      "checks": [
        {
          "id": "API-001",
          "name": "Health Check Endpoint",
          "description": "Health check must respond 200",
          "type": "http_check",
          "endpoint": "/supabase/functions/v1/healthz",
          "expected_status": 200,
          "required": true,
          "strict_mode_required": false
        },
        {
          "id": "API-002",
          "name": "Critical Edge Functions",
          "description": "Essential functions must be deployed",
          "type": "function_deployment",
          "critical_functions": [
            "maturion-ai-chat",
            "process-document-v2",
            "search-ai-context"
          ],
          "required": true,
          "strict_mode_required": true
        },
        {
          "id": "API-003",
          "name": "Supabase Connectivity",
          "description": "Can connect to Supabase",
          "type": "connectivity",
          "validation": "check_supabase_connection",
          "required": true,
          "strict_mode_required": true
        }
      ]
    },
    "security_posture": {
      "category": "Security Validation",
      "severity": "critical",
      "checks": [
        {
          "id": "SEC-001",
          "name": "No Secrets in Code",
          "description": "No hardcoded secrets or API keys",
          "type": "secret_scan",
          "scan_directories": ["src", "supabase/functions"],
          "patterns": [
            "sk-[a-zA-Z0-9]{32,}",
            "pk_[a-zA-Z0-9]{32,}",
            "AIza[a-zA-Z0-9]{35}"
          ],
          "required": true
        },
        {
          "id": "SEC-002",
          "name": "XSS Protection Active",
          "description": "DOMPurify must be used for user content",
          "type": "code_validation",
          "validation": "check_dompurify_usage",
          "required": true
        },
        {
          "id": "SEC-003",
          "name": "HTTPS Enforcement",
          "description": "All external requests must use HTTPS",
          "type": "protocol_check",
          "validation": "check_https_usage",
          "required": true
        },
        {
          "id": "SEC-004",
          "name": "Credential Encryption",
          "description": "Data source credentials must be encrypted",
          "type": "encryption_check",
          "validation": "check_credential_encryption",
          "required": true,
          "strict_mode_required": true
        }
      ]
    },
    "ui_consistency": {
      "category": "UI/UX Validation",
      "severity": "medium",
      "checks": [
        {
          "id": "UI-001",
          "name": "Consistent Layout",
          "description": "All authenticated pages use AppLayout",
          "type": "layout_validation",
          "validation": "check_layout_usage",
          "required": true
        },
        {
          "id": "UI-002",
          "name": "Responsive Design",
          "description": "Pages must be responsive",
          "type": "responsive_check",
          "breakpoints": ["mobile", "tablet", "desktop"],
          "required": true
        },
        {
          "id": "UI-003",
          "name": "Navigation Consistency",
          "description": "Sidebar navigation must be consistent",
          "type": "navigation_check",
          "validation": "check_sidebar_items",
          "required": true
        },
        {
          "id": "UI-004",
          "name": "Global Chat Available",
          "description": "Maturion chat must be globally accessible",
          "type": "global_component_check",
          "component": "MaturionChat",
          "required": true
        }
      ]
    },
    "documentation": {
      "category": "Documentation Quality",
      "severity": "medium",
      "checks": [
        {
          "id": "DOC-001",
          "name": "Architecture Up to Date",
          "description": "ARCHITECTURE.md must reflect current state",
          "type": "documentation_sync",
          "validation": "manual_review",
          "required": true
        },
        {
          "id": "DOC-002",
          "name": "README Complete",
          "description": "README.md must have setup instructions",
          "type": "documentation_check",
          "target": "README.md",
          "required_sections": [
            "Project info",
            "Technologies",
            "Setup",
            "Deployment"
          ],
          "required": true
        },
        {
          "id": "DOC-003",
          "name": "API Documentation",
          "description": "docs/API_DOCUMENTATION.md must exist",
          "type": "file_existence",
          "target": "docs/API_DOCUMENTATION.md",
          "required": true
        }
      ]
    }
  },
  "qa_execution": {
    "order": [
      "architecture_compliance",
      "environment_checks",
      "build_integrity",
      "wiring_verification",
      "legacy_detection",
      "database_integrity",
      "api_health",
      "security_posture",
      "ui_consistency",
      "documentation"
    ],
    "failure_handling": {
      "critical": "STOP execution, report RED, require fix",
      "high": "Continue execution, report RED, require fix before deployment",
      "medium": "Continue execution, report YELLOW, fix recommended",
      "low": "Continue execution, report info only"
    },
    "strict_mode": {
      "enabled": false,
      "description": "When enabled, missing envs or DB connectivity cause RED",
      "toggle": "QA_STRICT environment variable"
    }
  },
  "reporting": {
    "format": "human_readable",
    "include_code": false,
    "detail_level": "component_level",
    "sections": [
      "overall_status",
      "category_status",
      "failed_checks",
      "warnings",
      "recommendations"
    ],
    "output_formats": [
      "console",
      "ui_dashboard",
      "json_export"
    ]
  },
  "automation": {
    "pre_commit_checks": [
      "BUILD-001",
      "BUILD-003",
      "SEC-001"
    ],
    "pre_deploy_checks": [
      "ARCH-001",
      "BUILD-002",
      "WIRE-001",
      "DB-001",
      "SEC-001"
    ],
    "nightly_checks": "all"
  }
}
